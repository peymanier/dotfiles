let mapleader = " "

nnoremap H ^
nnoremap L $

" Don't use Ex mode, use Q for formatting.
map Q gq

"" -- Map IDE actions to IdeaVim -- https://jb.gg/abva4t
" Find more examples here: https://jb.gg/share-ideavimrc
set NERDTree
set multiple-cursors
set number
set relativenumber
set noignorecase
set tabstop=4
set softtabstop=4
set shiftwidth=4
set showmode
set clipboard=unnamedplus
set clipboard+=ideaput
set incsearch
set hlsearch
set scrolloff=8
set history=1000
set ideajoin

" clear highlighting
nnoremap <ESC> :noh<CR>

" option selection
inoremap <expr> <down> ((pumvisible())?("\<C-n>"):("\<down>"))
inoremap <expr> <up> ((pumvisible())?("\<C-p>"):("\<up>"))

" debug
map <leader>b <Action>(ToggleLineBreakpoint)

" reformat
nnoremap <leader>f :action ReformatCode <CR>
vnoremap <leader>f :action ReformatCode <CR>
nnoremap <leader>o :action OptimizeImports <CR>
vnoremap <leader>o :action OptimizeImports <CR>

" greatest maps gh
nnoremap gh :action Back <CR>
nnoremap gl :action Forward <CR>
nnoremap g; :e #<CR>

" multiple cursors
map mc <A-n>
map mx <A-x>
map mp <A-p>

" comments
Plug 'tpope/vim-commentary'

" changes
nnoremap ]c :action VcsShowNextChangeMarker <CR>
nnoremap [c :action VcsShowPrevChangeMarker <CR>

""
nnoremap <c-o> :action ShowErrorDescription<cr>

" replace currently selected text with default register
vnoremap <Leader>p "_dP

sethandler <S-CR> a:ide
sethandler <S-Left> a:ide
sethandler <S-Up> a:ide
sethandler <S-Right> a:ide
sethandler <S-Down> a:ide
sethandler <C-2> a:ide
sethandler <C-S-2> a:ide
sethandler <C-6> a:ide
sethandler <C-S-6> a:ide
sethandler <C-A> a:vim
sethandler <C-B> a:ide
sethandler <C-C> a:ide
sethandler <C-D> a:vim
sethandler <C-E> a:ide
sethandler <C-F> a:ide
sethandler <C-G> a:ide
sethandler <C-H> a:ide
sethandler <C-I> a:ide
sethandler <C-J> a:ide
sethandler <C-K> a:ide
sethandler <C-L> a:ide
sethandler <C-M> a:ide
sethandler <C-N> a:ide
sethandler <C-O> a:vim
sethandler <C-P> a:ide
sethandler <C-R> a:vim
sethandler <C-S> a:ide
sethandler <C-T> a:ide
sethandler <C-V> a:vim
sethandler <C-W> a:ide
sethandler <C-Y> a:ide
