{
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Catppuccin Mocha",
    "workbench.preferredDarkColorTheme": "Catppuccin Mocha",
    "workbench.preferredHighContrastColorTheme": "Catppuccin Mocha",
    "workbench.sideBar.location": "left",
    "workbench.editor.enablePreview": false,
    "workbench.statusBar.visible": true,
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f5f",
        "statusBar.noFolderBackground": "#005f5f",
        "statusBar.debuggingBackground": "#005f5f",
        "statusBar.foreground": "#ffffff",
        "statusBar.debuggingForeground": "#ffffff"
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook",
        "*.txt": "default"
    },
    "catppuccin.italicComments": false,
    "catppuccin.italicKeywords": false,
    "editor.fontFamily": "JetBrainsMonoNL Nerd Font Mono",
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.renderControlCharacters": false,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.formatOnSave": true,
    "editor.rulers": [
        80,
        120
    ],
    "editor.suggestOnTriggerCharacters": false,
    "editor.tabCompletion": "on",
    "editor.suggestSelection": "first",
    "editor.find.autoFindInSelection": "never",
    "editor.fontLigatures": true,
    "editor.guides.indentation": false,
    "editor.fontSize": 16,
    "window.zoomLevel": 0.8,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": null
    },
    "[json]": {
        "editor.defaultFormatter": null
    },
    "[javascript]": {
        "editor.defaultFormatter": null
    },
    "[python]": {
        // "editor.defaultFormatter": "ms-python.autopep8",
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.minimumContrastRatio": 7,
    "terminal.integrated.letterSpacing": 1.2,
    "emmet.showSuggestionsAsSnippets": true,
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "breadcrumbs.enabled": true,
    "files.exclude": {
        "**/.classpath": true,
        "**/.DS_Store": true,
        "**/.factorypath": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.svn": true,
        "**/*.pyc": true,
        "**/CVS": true
    },
    "material-icon-theme.folders.associations": {
        "global_state": "global",
        "ui": "layout",
        "bloc": "controller"
    },
    "git.confirmSync": false,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "redhat.telemetry.enabled": false,
    "scm.inputFontSize": 14,
    "go.toolsManagement.autoUpdate": true,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "K"
            ],
            "commands": [
                "editor.action.showHover"
            ]
        },
        {
            "before": [
                "H"
            ],
            "after": [
                "^"
            ]
        },
        {
            "before": [
                "L"
            ],
            "after": [
                "$"
            ]
        },
        {
            "before": [
                "g",
                "h"
            ],
            "commands": [
                "workbench.action.navigateBackInNavigationLocations"
            ]
        },
        {
            "before": [
                "g",
                "l"
            ],
            "commands": [
                "workbench.action.navigateForwardInNavigationLocations"
            ]
        },
        {
            "before": [
                "g",
                ";"
            ],
            "commands": [
                "workbench.action.openPreviousRecentlyUsedEditorInGroup"
            ]
        },
        {
            "before": [
                "g",
                "t"
            ],
            "commands": [
                "workbench.action.nextEditor"
            ]
        },
        {
            "before": [
                "g",
                "T"
            ],
            "commands": [
                "workbench.action.previousEditor"
            ]
        },
        {
            "before": [
                "]",
                "c"
            ],
            "commands": [
                "workbench.action.editor.nextChange"
            ],
            "when": "chat.hasEditorModifications && editorFocus || chat.hasNotebookEditorModifications && editorFocus"
        },
        {
            "before": [
                "[",
                "c"
            ],
            "commands": [
                "workbench.action.editor.previousChange"
            ],
            "when": "chat.hasEditorModifications && editorFocus || chat.hasNotebookEditorModifications && editorFocus"
        },
        {
            "before": [
                "]",
                "d"
            ],
            "commands": [
                "editor.action.marker.next"
            ],
            "when": "chat.hasEditorModifications && editorFocus || chat.hasNotebookEditorModifications && editorFocus"
        },
        {
            "before": [
                "[",
                "d"
            ],
            "commands": [
                "editor.action.marker.prev"
            ],
            "when": "chat.hasEditorModifications && editorFocus || chat.hasNotebookEditorModifications && editorFocus"
        },
        {
            "before": [
                "<leader>",
                "s",
                "f"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "<leader>",
                "s",
                "g"
            ],
            "commands": [
                "workbench.action.findInFiles"
            ]
        },
        {
            "before": [
                "<leader>",
                "s",
                "d"
            ],
            "commands": [
                "workbench.actions.view.problems"
            ]
        },
        {
            "before": [
                "g",
                "r",
                "n"
            ],
            "commands": [
                "editor.action.rename"
            ]
        },
        {
            "before": [
                "g",
                "r",
                "a"
            ],
            "commands": [
                "editor.action.quickFix"
            ]
        },
        {
            "before": [
                "g",
                "r",
                "r"
            ],
            "commands": [
                "editor.action.referenceSearch.trigger"
            ]
        },
        {
            "before": [
                "<leader>",
                "h",
                "r"
            ],
            "commands": [
                "git.revertSelectedRanges"
            ]
        },
        {
            "before": [
                "<leader>",
                "h",
                "s"
            ],
            "commands": [
                "git.stageSelectedRanges"
            ]
        },
        {
            "before": [
                "<leader>",
                "h",
                "d"
            ],
            "commands": [
                "git.openChange"
            ]
        },
        {
            "before": [
                "<leader>",
                "h",
                "p"
            ],
            "commands": [
                "editor.action.dirtydiff.next"
            ]
        }
    ],
    "vim.useSystemClipboard": true,
    "vim.digraphs": {},
    "vim.targets.smartQuotes.enable": false,
    "vim.targets.smartQuotes.breakThroughLines": false,
    "vim.targets.smartQuotes.aIncludesSurroundingSpaces": false,
    "vim.targets.bracketObjects.enable": false,
    "vim.surround": false,
    "vim.leader": " ",
    "vim.smartRelativeLine": true,
    "vim.timeout": 500,
    "vim.visualstar": true,
}
